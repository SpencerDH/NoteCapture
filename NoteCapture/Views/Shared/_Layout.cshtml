<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/site.css" rel="stylesheet">

    <!-- Reference to font-awesome -->
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

</head>

<body>
    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="border-right" id="sidebar-wrapper">
            <div class="sidebar-heading"><i class="fa fa-meteor"></i> Starlight</div>
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-user-profile"><i class="fa fa-user-circle"></i> @User.Identity.Name</a>
                <div class="search-bar">
                    <input class="list-group-item-search-bar" type="text" placeholder="Search..." />
                    <a href="#" class="search-icon"><i class="fas fa-search"></i></a>
                </div>

                <form method="get">
                    <div class="new-note">
                        <button class="btn note-create-invitation" asp-controller="Notes" asp-action="Create" role="button">Create New Note   <i class="fa fa-plus-circle"></i></button>
                    </div>
                </form>

                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action"><i class="fa fa-home"></i> Home</a>
                <a href="#" class="list-group-item list-group-item-action"><i class="fa fa-star"></i> Shortcuts</a>
                <a asp-controller="Notes" asp-action="Index" class="list-group-item list-group-item-action"><i class="fa fa-sticky-note"></i> Notes</a>
                <br />
                <a href="#" class="list-group-item list-group-item-action"><i class="fa fa-clipboard"></i> Notebooks</a>
                <a href="#" class="list-group-item list-group-item-action"><i class="fa fa-tags"></i> Tags</a>
                <a href="#" class="list-group-item list-group-item-action"><i class="fa fa-trash"></i> Trash</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <!--
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
