@model NoteCapture.Models.UserRegistrationModel

@{
    Layout = "_AuthLayout.cshtml";
}

<form asp-controller="Auth" asp-action="Register" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <!-- Form group for username begins -->
        <label asp-for="UserName" class="custom-control-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div> <!-- Form group for username ends -->

    <div class="form-group">
        <!-- Form group for first name begins -->
        <label asp-for="FirstName" class="custom-control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div> <!-- Form group for first name ends -->

    <div class="form-group">
        <!-- Form group for last name begins -->
        <label asp-for="LastName" class="custom-control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div> <!-- Form group for last name ends -->

    <div class="form-group">
        <!-- Form group for email address begins -->
        <label asp-for="EmailAddress" class="custom-control-label"></label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div> <!-- Form group for email address ends -->

    <div class="form-group">
        <!-- Form group for first password entry begins -->
        <label asp-for="Password1" class="custom-control-label"></label>
        <input type="password" asp-for="Password1" class="form-control" />
        <span asp-validation-for="Password1" class="text-danger"></span>
    </div> <!-- Form group for first password entry ends -->

    <div class="form-group">
        <!-- Form group for second password entry begins -->
        <label asp-for="Password2" class="custom-control-label"></label>
        <input type="password" asp-for="Password2" class="form-control" />
        <span asp-validation-for="Password2" class="text-danger"></span>
    </div> <!-- Form group forsecond password entry ends -->

    <div class="form-group">
        <!-- Registration submission -->
        <input type="submit" value="Register" class="btn btn-primary" />
    </div> <!-- Registration submission -->

</form>

<!-- Link to registration page -->
<a asp-action="Login">Return to Login</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}